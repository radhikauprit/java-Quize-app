import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class quiz extends JFrame implements ActionListener {
    String questions[][] = new String[10][5]; // 10 questions, each: [0]=Q, [1-4]=options
    String answers[] = new String[10];        // Correct answers
    JLabel qNo, question;
    JRadioButton[] options = new JRadioButton[4];
    ButtonGroup bg;
    JButton next;
    int currentQ = 0;
    int score = 0;

    public quiz() {
        // Frame setup
        getContentPane().setBackground(Color.LIGHT_GRAY);
        setBounds(50, 10, 1300, 1000);
        setLayout(null);
        setDefaultCloseOperation(EXIT_ON_CLOSE);

        // Banner image
        ImageIcon im = new ImageIcon("image/quize.jjp.png");
        JLabel jb = new JLabel(im);
        jb.setBounds(0, 0, 1300, 300);
        add(jb);

        // Question number label
        qNo = new JLabel("1.");
        qNo.setBounds(100, 310, 50, 35);
        qNo.setFont(new Font("Tahoma", Font.BOLD, 20));
        add(qNo);

        // Question label
        question = new JLabel();
        question.setBounds(150, 310, 900, 45);
        question.setFont(new Font("Viner Hand ITC", Font.BOLD, 25));
        add(question);

        // Options
        bg = new ButtonGroup();
        int y = 400;
        for (int i = 0; i < 4; i++) {
            options[i] = new JRadioButton();
            options[i].setBounds(170, y, 700, 30);
            options[i].setBackground(Color.LIGHT_GRAY);
            options[i].setFont(new Font("Tahoma", Font.PLAIN, 20));
            add(options[i]);
            bg.add(options[i]);
            y += 50;
        }

        // Next button
        next = new JButton("Next");
        next.setBounds(120, 600, 100, 40);
        next.addActionListener(this);
        add(next);

        // Initialize questions
        initQuestions();

        // Load first question
        loadQuestion(currentQ);

        setVisible(true);
    }

    private void initQuestions() {
        questions[0][0] = "What is the capital of France?";
        questions[0][1] = "Paris";
        questions[0][2] = "Madrid";
        questions[0][3] = "Berlin";
        questions[0][4] = "London";
        answers[0] = "Paris";

        questions[1][0] = "Which planet is known as the Red Planet?";
        questions[1][1] = "Mars";
        questions[1][2] = "Venus";
        questions[1][3] = "Jupiter";
        questions[1][4] = "Saturn";
        answers[1] = "Mars";

        questions[2][0] = "Who wrote 'Hamlet'?";
        questions[2][1] = "Charles Dickens";
        questions[2][2] = "William Shakespeare";
        questions[2][3] = "Mark Twain";
        questions[2][4] = "Leo Tolstoy";
        answers[2] = "William Shakespeare";

        questions[3][0] = "What is the largest ocean on Earth?";
        questions[3][1] = "Atlantic Ocean";
        questions[3][2] = "Indian Ocean";
        questions[3][3] = "Pacific Ocean";
        questions[3][4] = "Arctic Ocean";
        answers[3] = "Pacific Ocean";

        questions[4][0] = "What is the chemical symbol for water?";
        questions[4][1] = "O2";
        questions[4][2] = "H2O";
        questions[4][3] = "CO2";
        questions[4][4] = "NaCl";
        answers[4] = "H2O";

        questions[5][0] = "Who painted the Mona Lisa?";
        questions[5][1] = "Leonardo da Vinci";
        questions[5][2] = "Vincent van Gogh";
        questions[5][3] = "Pablo Picasso";
        questions[5][4] = "Claude Monet";
        answers[5] = "Leonardo da Vinci";

        questions[6][0] = "Which country is famous for the Taj Mahal?";
        questions[6][1] = "India";
        questions[6][2] = "Pakistan";
        questions[6][3] = "Bangladesh";
        questions[6][4] = "Nepal";
        answers[6] = "India";

        questions[7][0] = "What is the smallest prime number?";
        questions[7][1] = "0";
        questions[7][2] = "1";
        questions[7][3] = "2";
        questions[7][4] = "3";
        answers[7] = "2";

        questions[8][0] = "What gas do plants absorb from the atmosphere?";
        questions[8][1] = "Oxygen";
        questions[8][2] = "Carbon Dioxide";
        questions[8][3] = "Nitrogen";
        questions[8][4] = "Hydrogen";
        answers[8] = "Carbon Dioxide";

        questions[9][0] = "Which instrument has keys, pedals, and strings?";
        questions[9][1] = "Guitar";
        questions[9][2] = "Violin";
        questions[9][3] = "Piano";
        questions[9][4] = "Flute";
        answers[9] = "Piano";
    }

    private void loadQuestion(int qIndex) {
        qNo.setText((qIndex + 1) + ".");
        question.setText(questions[qIndex][0]);
        for (int i = 0; i < 4; i++) {
            options[i].setText(questions[qIndex][i + 1]);
            options[i].setSelected(false);
        }
    }

    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == next) {
            // Check answer
            for (JRadioButton option : options) {
                if (option.isSelected()) {
                    if (option.getText().equals(answers[currentQ])) {
                        score++;
                    }
                }
            }

            currentQ++;
            if (currentQ >= questions.length) {
                JOptionPane.showMessageDialog(this, "Quiz Completed!\nYour Score: " + score + "/" + questions.length);
                System.exit(0);
            } else {
                loadQuestion(currentQ);
            }
        }
    }

    public static void main(String[] args) {
        new quiz();
    }
}
